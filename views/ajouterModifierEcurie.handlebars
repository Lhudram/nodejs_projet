<h3> {{titre}} </h3>
<form action="#" method="post">
    <table>
        <tr>
            <td>
                <label for="nom">Nom</label>
            </td>
            <td>
                <input id="nom" value="{{nom}}" type="text" name="ecurie[nom]"/>
            </td>
        </tr>
        <tr>
            <td>
                <label for="directeur">Directeur</label>
            </td>
            <td>
                <input id="directeur" type="text" value="{{directeur}}" name="ecurie[directeur]"/>
            </td>
        </tr>
        <tr>
            <td>
                <label for="siege">Adresse du si√®ge</label>
            </td>
            <td>
                <input id="siege" type="text" value="{{siege}}" name="ecurie[siege]"/>
            </td>
        </tr>
        <tr>
            <td>
                <label for="points">Points</label>
            </td>
            <td>
                <input id="points" type="number" min="0" value="{{points}}" name="ecurie[points]"/>pts
            </td>
        </tr>
        <tr>
            <td>
                <label for="pays">Pays</label>
            </td>
            <td>
                <select id="pays" name="ecurie[pays]">
                    {{#each pays}}
                        <option value="{{this.paynum}}" {{this.selected}}>{{this.paynom}}</option>
                    {{/each}}
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <label for="image">Image</label>
            </td>
            <td>
                <input id="image" type="file" accept="image/*" name="ecurie[image]"/>
            </td>
        </tr>
    </table>
    <input type="submit" value="{{titreBouton}}"/>
    <input type="hidden" value="{{id}}" name="id">
</form>