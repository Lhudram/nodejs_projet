<div class="centre"><img src="/image/cat_sponsor.png">
    <h3>Gestion des sponsors</h3>
    <a href="/ajoutersponsor"><img src="/image/act_add.png">Ajouter un sponsor</a>
</div>
<br/><br/>
<div class="gauche">
    <table class="tableau">
        <tr>
            <td>
                <strong>Nom</strong>
            </td>
            <td>
                <strong>Activite</strong>
            </td>
            <td>
                <strong>Actions</strong>
            </td>
        </tr>
        {{#each sponsor}}
            <tr>
                <td>
                    {{this.sponom}}
                </td>
                <td>
                    {{this.sposectactivite}}
                </td>
                <td>
                    <a href="/sponsors/modifier/{{this.sponum}}"><img src="/image/act_edit.png"> Modifier </a>
                    <a href="/sponsors/supprimer/{{this.sponum}}"><img src="/image/act_delete.png"> Supprimer</a>
                </td>
            </tr>
        {{/each}}
    </table>
</div>
