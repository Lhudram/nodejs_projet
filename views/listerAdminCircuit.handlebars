<div class="centre"><img src="/image/cat_circuit.png">
    <h3>Gestion des circuits</h3>
    <a href="ajoutercircuit"><img src="/image/act_add.png">Ajouter un circuit</a>
</div>
<br/><br/>
<div class="gauche">
    <table class="tableau">
        <tr>
            <td>
                <strong>Nom</strong>
            </td>
            <td>
                <strong>Longueur</strong>
            </td>
            <td>
                <strong>Nombre de spectateurs</strong>
            </td>
            <td>
                <strong>Actions</strong>
            </td>
        </tr>
        {{#each circuit}}
            <tr>
                <td>
                     {{this.cirnom}}
                </td>
                <td>
                        {{this.cirlongueur}}
                </td>
                <td>
                     {{this.cirnbspectateurs}}
                </td>
                <td>
                    <a href="/circuits/modifier/{{this.cirnum}}"><img src="/image/act_edit.png"> Modifier </a> <a href="/circuits/supprimer/{{this.cirnum}}"><img src="/image/act_delete.png"> Supprimer</a>
                </td>
            </tr>
        {{/each}}
    </table>
</div>
<br class="myboth"/>